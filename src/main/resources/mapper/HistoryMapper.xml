<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlybl.mapper.HistoryMapper">
    <!--查询所有借书记录-->
    <select id="selectAllHistory" resultType="History">
        SELECT * FROM history
    </select>
    <!--根据条件查询多条图书记录-->
    <select id="selectHistorysByConditions" resultType="History">
        SELECT * FROM history WHERE (book_id LIKE CONCAT('%',#{bookId},'%') OR CONCAT('%',#{bookId},'%')=0 OR #{bookId}='')
                                AND (user_id LIKE CONCAT('%',#{userId},'%') OR CONCAT('%',#{userId},'%')=0 OR #{userId}='')
                                AND (borrowed_time LIKE CONCAT('%',#{borrowedTime},'%') OR #{borrowedTime} is null)
                                AND (returned_time LIKE CONCAT('%',#{returnedTime},'%') OR #{returnedTime} is null)
    </select>
    <!--根据id查询单挑图书记录-->
    <select id="selectHistoryByHistoryId" resultType="History">
        SELECT * FROM history WHERE (history_id = #{historyId})
    </select>
    <!--增加借书记录-->
    <insert id="addHistory">
        INSERT INTO history(book_id,user_id,borrowed_time,returned_time) VALUES (#{bookId},#{userId},#{borrowedTime},#{returnedTime})
    </insert>
    <!--修改借书记录-->
    <update id="updateHistory">
        UPDATE history SET book_id=#{bookId},user_id=#{userId},borrowed_time=#{borrowedTime},returned_time=#{returnedTime} where history_id=#{historyId}
    </update>
    <!--删除借书记录-->
    <delete id="deleteHistory">
        DELETE FROM history WHERE history_id=#{historyId}
    </delete>
</mapper>